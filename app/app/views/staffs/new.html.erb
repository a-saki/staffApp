<% provide(:css, "signup.css")%>

<div class="container">
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        新規登録
      </div>
    </h2>
      <%= form_for @staff, html: {class: "ui large form"} do |f| %>
      <div class="ui stacked">
        <div class="required field">
          <%= f.label :name, "ユーザーネーム" %>
          <div class="ui left icon input">
            
            <i class="user icon"></i>
            <%= f.text_field :name %>
          </div>
        </div>
        
        <div class="field">
           <%= f.label :emial, "メールアドレス"%>
          <div class="ui left icon input">
            <%= f.text_field :email %>
          </div>
        </div>
        
        <div class="required field">
           <%= f.label :password, "パスワード" %>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="required field">
           <%= f.label :jobcategory, "職種"  %>
          <div class="ui left icon input">
            <%= f.select :jobcategory ,{engineer: "Engineer", designer: "Designer", director: "Director", producer: "Producer", wmc: "WMC"},{}, {class: "ui fluid search dropdown"} %>
          </div>
        </div>
        <div class="field">
           <label for="name" class="">職歴</label>
          <div class="ui left icon input">
            <input type="password" name="password" placeholder="職歴">
          </div>
        </div>
        
        <div class="field">
           <label for="name" class="">課</label>
          <div class="ui left icon input">
            <input type="password" name="password" placeholder="職歴">
          </div>
        </div>
        
        <div class="field">
           <label for="name" class="">Twitter</label>
          <div class="ui left icon input">
            <input type="password" name="password" placeholder="URL">
          </div>
        </div>
        
        <div class="field">
           <label for="name" class="">Facebook</label>
          <div class="ui left icon input">
            <input type="password" name="password" placeholder="URL">
          </div>
        </div>
        
        <div class="field">
           <label for="name" class="">Instagram</label>
          <div class="ui left icon input">
            <input type="password" name="password" placeholder="URL">
          </div>
        </div>
        
       
        
        <div class="field">
          <button class="ui fluid large teal submit button" type="submit">新規登録</button>
        </div>
      </div>

      <div class="ui error message"></div>
      <div class="field">
        
      </div>

    <% end %>

  </div>
</div>
</div>